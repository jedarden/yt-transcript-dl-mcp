# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# MCP Transport Mode
# Set to 'true' to enable multiple concurrent transports
MCP_MULTI_TRANSPORT=true

# For single transport mode (when MCP_MULTI_TRANSPORT=false)
MCP_TRANSPORT=stdio

# Individual Transport Configuration
# Stdio Transport
STDIO_ENABLED=true

# SSE Transport
SSE_ENABLED=true
SSE_PORT=3001
SSE_HOST=0.0.0.0

# HTTP Transport
HTTP_ENABLED=true
HTTP_PORT=3002
HTTP_HOST=0.0.0.0

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=simple